<div class="sign-up-page">
	<div class="sign-up-container">
		<%= form_with model: @user, url: sign_up_path, local: true do |f| %>
			<div class="sign-up-form">
				<div class="sign-up-title">
					<h1>アカウント作成</h1>
				</div>
				<div class="field">
					<%= f.text_field :user_name, placeholder:'ユーザ名', class: "form-name" %>
				</div>
				<div class="field">
					<%= f.text_field :email, placeholder:'メールアドレス', class: "form-email" %>
				</div>
				<div class="field">
					<%= f.password_field :password, placeholder:'パスワード', class: "form-password" %>
				</div>
				<div class="field">
					<%= f.password_field :password_confirmation, placeholder:'パスワード確認用', class: "form-password-confirmation" %>
				</div>
		
				<div class="actions">
					<%= f.submit "登録", class: "btn btn-primary sign-up-page-button center" %>
					<%= link_to '既にアカウントをお持ちの方', login_path, class: 'link center' %>
				</div>

			</div>
		<% end %>
	</div>
</div>

<%= react_component("HelloWorld", { greeting: "Hello react-rails." }) %>